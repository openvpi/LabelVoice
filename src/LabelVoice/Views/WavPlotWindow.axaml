<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ScottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="LabelVoice.Views.WavPlotWindow"
		Title="WavPlot">

	<Grid Name="layout" RowDefinitions="Auto,1*,1*" ColumnDefinitions="120,1*,120,120">
		<Button Name="btnGetWavHeader"
					Content="Select WAV"
					Grid.Column="0"/>
		<ScottPlot:AvaPlot Name="wavPlot" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4"/>
		<ScottPlot:AvaPlot Name="specPlot" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4"/>
	</Grid>

</Window>