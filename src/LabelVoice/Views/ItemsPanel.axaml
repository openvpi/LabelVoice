<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:v="using:LabelVoice.Views"
             mc:Ignorable="d" d:DesignWidth="452" d:DesignHeight="256"
             x:Class="LabelVoice.Views.ItemsPanel">

	<Grid
		RowDefinitions="34, 48, *"
		VerticalAlignment="Stretch">
		<TextBlock
			Text="Items"
			Margin="16,0,0,0"
			FontSize="16"
			FontWeight="SemiBold"
			VerticalAlignment="Center" />
		<TextBox
			x:Name="textBoxSearch"
			Grid.Row="1"
			Watermark="Search..."
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			Margin="17,9" />
		<TreeView 
			Grid.Row="2"
	        Items="{Binding Items}"
			SelectionMode="Multiple">
			<TreeView.ItemTemplate>
				<TreeDataTemplate ItemsSource="{Binding Subfolders}">
					<v:ExplorerTreeViewItem DoubleTapped="Item_DoubleTapped"/>
				</TreeDataTemplate>
			</TreeView.ItemTemplate>
		</TreeView>
	</Grid>
</UserControl>