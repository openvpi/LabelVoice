<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:LabelVoice.ViewModels"
             mc:Ignorable="d" d:DesignWidth="452" d:DesignHeight="40"
             x:Class="LabelVoice.Views.ExplorerTreeViewItem">

	<Design.DataContext>
		<vm:ExplorerTreeViewItemViewModel/>
	</Design.DataContext>

	<Grid
		ColumnDefinitions="48, *, Auto"
		HorizontalAlignment="Stretch"
		VerticalAlignment="Center"
		Height="34">
		<TextBlock
			Grid.Column="0"
			Text="â—‹"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Margin="16,0,16,0"
			Width="16"
			Height="16"/>
		<TextBlock
			Grid.Column="1"
			Text="{Binding Title}"
			VerticalAlignment="Center"
			FontSize="14" />
		<Border
			Grid.Column="2"
			Background="#0F7B0F"
			IsVisible="{Binding HasLanguageTag}"
			CornerRadius="12"
			Height="20"
			Margin="0,0,16,0"
			Padding="8,4">
			<TextBlock
			   Text="{Binding Language}"
			   FontSize="12"
			   VerticalAlignment="Center"/>
		</Border>
	</Grid>
</UserControl>
