<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LabelVoice.Widgets.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LabelVoice.Widgets.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="LabelVoice.Widgets"
        xmlns:controls="using:LabelVoice.Widgets.Views"
        >

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" />
            
            <controls:DockCard HorizontalAlignment="Center">
                
            </controls:DockCard>
            
            <Button Content="22222" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Grid>

</Window>
